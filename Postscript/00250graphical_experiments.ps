%!

/triangle
% x0 y0 x1 y1 x2 y2  triangle -
{
   newpath
   moveto
   lineto
   lineto
   closepath
   stroke
} def


/fill_triangle
% x0 y0 x1 y1 x2 y2  fill_triangle -
{
   newpath
   moveto
   lineto
   lineto
   closepath
   fill
   stroke
} def



/rectangle
% xll yll dx dy rectangle -
{
   newpath
   /dy exch def
   /dx exch def
   /yll exch def
   /xll exch def
         xll   yll    moveto
          dx     0    rlineto
          0     dy    rlineto
   0 dx sub      0    rlineto
   closepath
   stroke
} def


/fill_rectangle
% xll yll dx dy fill_rectangle -
{
   newpath
   /dy exch def
   /dx exch def
   /yll exch def
   /xll exch def
         xll   yll    moveto
          dx     0    rlineto
          0     dy    rlineto
   0 dx sub      0    rlineto
   closepath
   fill
   stroke
} def





